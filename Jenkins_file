pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
        disableConcurrentBuilds()
    }

    triggers { pollSCM('H/10 * * * *') }

    environment {
        FIREBASE_PROJECT = 'automation-hosting'
        PUBLIC_DIR       = 'dist'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Deploy to Firebase Hosting') {
            steps {
                withCredentials([string(credentialsId: 'firebase-service-account-json', variable: 'TOKEN')]) {
                    bat """
                        npm install -g firebase-tools
                        firebase deploy --only hosting --project %FIREBASE_PROJECT% --token "%TOKEN%" --public %PUBLIC_DIR% --message "Jenkins build #${BUILD_NUMBER}"
                    """
                }
            }
        }
    }

    post {
        success { echo 'Deployed successfully! Check https://automation-hosting.web.app' }
        failure { echo 'Deployment failed' }
        always  { cleanWs() }
    }
}
