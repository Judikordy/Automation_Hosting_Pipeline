pipeline {
    agent any

    options {
        skipDefaultCheckout(true)      // Crucial line
        disableConcurrentBuilds()      // Bonus: prevents overlapping builds
    }

    triggers {
        pollSCM('H/5 * * * *')
    }

    environment {
        FIREBASE_PROJECT_ID         = 'automation-hosting'
        PUBLIC_DIR                  = 'dist'
        FIREBASE_TOKEN_CREDENTIALS  = 'firebase-service-account-json'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                git url: 'https://github.com/Judikordy/Automation_Hosting_Pipeline.git',
                    branch: 'main',
                    credentialsId: 'd4a3d8ac-4d36-4253-83dd-6c932125da3c'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing npm packages...'
                sh 'npm ci'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the app...'
                sh 'npm run build'
            }
        }

        stage('Deploy to Firebase Hosting') {
            steps {
                echo 'Deploying to Firebase Hosting...'
                withCredentials([string(credentialsId: env.FIREBASE_TOKEN_CREDENTIALS, variable: 'FIREBASE_TOKEN')]) {
                    sh '''
                        npm install -g firebase-tools --force
                        firebase deploy --only hosting \
                            --project ${FIREBASE_PROJECT_ID} \
                            --token ${FIREBASE_TOKEN} \
                            --public ${PUBLIC_DIR} \
                            --message "Jenkins build #${BUILD_NUMBER} - ${GIT_COMMIT}"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Deployed successfully to Firebase Hosting!'
        }
        failure {
            echo 'Deployment failed â€“ check the logs above'
        }
        always {
            cleanWs(cleanWhenNotBuilt: false, cleanWhenFailure: true, cleanWhenSuccess: true)
        }
    }
}
